                        "PrimaryElection": {
                            "Ref": "PrimaryElection"
                        },
                        "LifecycleItem": {
                            "Ref": "LifecycleItem"
                        },
                        "Settings": {
                            "Ref": "Settings"
                        },
                        "CustomLog": {
                            "Fn::If": [
                                "EnableCustomLog",
                                {
                                    "Ref": "CustomLog"
                                },
                                ""
                            ]
                        },
                        "VmInfoCache": {
                            "Fn::If": [
                                "EnableVmInfoCache",
                                {
                                    "Ref": "VmInfoCache"
                                },
                                ""
                            ]
                        },
                        "NicAttachment": {
                            "Fn::If": [
                                "EnableSecondNic",
                                {
                                    "Ref": "NicAttachment"
                                },
                                ""
                            ]
                        },
                        "LicenseStock": {
                            "Fn::If": [
                                "EnableHybridLicensing",
                                {
                                    "Ref": "LicenseStock"
                                },
                                ""
                            ]
                        },
                        "LicenseUsage": {
                            "Fn::If": [
                                "EnableHybridLicensing",
                                {
                                    "Ref": "LicenseUsage"
                                },
                                ""
                            ]
                        },
                        "VpnAttachment": {
                            "Fn::If": [
                                "EnableTransitGatewayVpn",
                                {
                                    "Ref": "VpnAttachment"
