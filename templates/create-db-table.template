{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create all necessary DynamoDB tables for FortiGate Autoscale Solution.",
    "Parameters": {
        "ResourceTagPrefix": {
            "Type": "String",
            "AllowedPattern": "[0-9a-zA-Z@.#-]+",
            "MaxLength": 64,
            "ConstraintDescription": "Resource tag prefix can include numbers, lowercase letters, uppercase letters, ampersat(@) , hyphens (-), period (.), and hash (#). Max length is 64.",
            "Description": "A prefix for tag key ResourceGroup on all resources. It's also used as the name prefix of all applicable resources. Can only contain numbers, lowercase letters, uppercase letters, ampersat(@) , hyphens (-), period (.), and hash (#). Max length is 64."
        },
        "EnableSecondNic": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable the Secondary Elastic Network Interface controllers."
        },
        "EnableVmInfoCache": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable VM Info Cache in DB."
        },
        "EnableCustomLog": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable Custom Log in DB."
        },
        "EnableTransitGatewayVpn": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable Transit Gateway VPN support."
        },
        "EnableHybridLicensing": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable Hybrid Licensing support."
        },
        "EnableFortiAnalyzer": {
            "Type": "String",
            "Default": "no",
            "AllowedValues": ["yes", "no"],
            "ConstraintDescription": "must choose from the provided options.",
            "Description": "Enable FortiAnalyzer support."
        }
    },
    "Conditions": {
        "EnableSecondNic": {
            "Fn::Equals": [
                {
                    "Ref": "EnableSecondNic"
                },
                "yes"
            ]
        },
        "EnableVmInfoCache": {
            "Fn::Equals": [
                {
                    "Ref": "EnableVmInfoCache"
                },
                "yes"
            ]
        },
        "EnableCustomLog": {
            "Fn::Equals": [
                {
                    "Ref": "EnableCustomLog"
                },
                "yes"
            ]
        },
        "EnableFortiAnalyzer": {
            "Fn::Equals": [
                {
                    "Ref": "EnableFortiAnalyzer"
                },
                "yes"
            ]
        },
        "EnableTransitGatewayVpn": {
            "Fn::Equals": [
                {
                    "Ref": "EnableTransitGatewayVpn"
                },
                "yes"
            ]
        },
        "EnableHybridLicensing": {
            "Fn::Equals": [
                {
                    "Ref": "EnableHybridLicensing"
                },
                "yes"
            ]
        }
    },
    "Resources": {
        "Autoscale": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "vmId",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "vmId",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "Autoscale"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "PrimaryElection": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "scalingGroupName",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "scalingGroupName",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "PrimaryElection"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "LifecycleItem": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "vmId",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "vmId",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "LifecycleItem"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "Settings": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "settingKey",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "settingKey",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "Settings"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "CustomLog": {
            "Condition": "EnableCustomLog",
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "timestamp",
                        "AttributeType": "N"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "timestamp",
                        "KeyType": "RANGE"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "CustomLog"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "VmInfoCache": {
            "Condition": "EnableVmInfoCache",
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
