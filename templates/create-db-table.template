        "VpnAttachment": {
            "Condition": "EnableTransitGatewayVpn",
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "vmId",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "ip",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "vmId",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "ip",
                        "KeyType": "RANGE"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "VpnAttachment"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        },
        "FortiAnalyzer": {
            "Condition": "EnableFortiAnalyzer",
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "vmId",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "vmId",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                },
                "TableName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "ResourceTagPrefix"
                            },
                            "FortiAnalyzer"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "ResourceGroup",
                        "Value": {
                            "Ref": "ResourceTagPrefix"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "AutoscaleTableArn": {
            "Value": {
                "Fn::GetAtt": ["Autoscale", "Arn"]
            }
        },
        "PrimaryElectionTableArn": {
            "Value": {
                "Fn::GetAtt": ["PrimaryElection", "Arn"]
            }
        },
        "LifecycleItemTableArn": {
            "Value": {
                "Fn::GetAtt": ["LifecycleItem", "Arn"]
            }
        },
        "SettingsTableArn": {
            "Value": {
                "Fn::GetAtt": ["Settings", "Arn"]
            }
        },
        "CustomLogTableArn": {
            "Condition": "EnableCustomLog",
            "Value": {
                "Fn::GetAtt": ["CustomLog", "Arn"]
            }
        },
        "VmInfoCacheTableArn": {
            "Condition": "EnableVmInfoCache",
            "Value": {
                "Fn::GetAtt": ["VmInfoCache", "Arn"]
            }
        },
        "NicAttachmentTableArn": {
            "Condition": "EnableSecondNic",
            "Value": {
                "Fn::GetAtt": ["NicAttachment", "Arn"]
            }
        },
        "LicenseStockTableArn": {
            "Condition": "EnableHybridLicensing",
            "Value": {
                "Fn::GetAtt": ["LicenseStock", "Arn"]
            }
        },
        "LicenseUsageTableArn": {
            "Condition": "EnableHybridLicensing",
            "Value": {
                "Fn::GetAtt": ["LicenseUsage", "Arn"]
            }
        },
        "VpnAttachmentTableArn": {
            "Condition": "EnableTransitGatewayVpn",
            "Value": {
                "Fn::GetAtt": ["VpnAttachment", "Arn"]
            }
        },
        "FortiAnalyzerTableArn": {
            "Condition": "EnableFortiAnalyzer",
            "Value": {
                "Fn::GetAtt": ["FortiAnalyzer", "Arn"]
            }
        },
        "TableArnList": {
            "Description": "The comma-delimited list of arn of DynamoDB tables created in this stack.",
            "Value": {
                "Fn::Sub": [
                    "${Autoscale},${PrimaryElection}${LifecycleItem},${Settings}${CustomLog}${VmInfoCache}${NicAttachment}${LicenseStock}${LicenseUsage}${VpnAttachment}${FortiAnalyzer}",
                    {
                        "Autoscale": {
                            "Fn::GetAtt": ["Autoscale", "Arn"]
                        },
                        "PrimaryElection": {
                            "Fn::GetAtt": ["PrimaryElection", "Arn"]
                        },
                        "LifecycleItem": {
                            "Fn::GetAtt": ["LifecycleItem", "Arn"]
                        },
                        "Settings": {
                            "Fn::GetAtt": ["Settings", "Arn"]
                        },
                        "CustomLog": {
                            "Fn::If": [
                                "EnableCustomLog",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["CustomLog", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "VmInfoCache": {
                            "Fn::If": [
                                "EnableVmInfoCache",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["VmInfoCache", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "NicAttachment": {
                            "Fn::If": [
                                "EnableSecondNic",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["NicAttachment", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "LicenseStock": {
                            "Fn::If": [
                                "EnableHybridLicensing",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["LicenseStock", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "LicenseUsage": {
                            "Fn::If": [
                                "EnableHybridLicensing",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["LicenseUsage", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "VpnAttachment": {
                            "Fn::If": [
                                "EnableTransitGatewayVpn",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["VpnAttachment", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        },
                        "FortiAnalyzer": {
                            "Fn::If": [
                                "EnableFortiAnalyzer",
                                {
                                    "Fn::Sub": [
                                        ",${arn}",
                                        {
                                            "arn": {
                                                "Fn::GetAtt": ["FortiAnalyzer", "Arn"]
                                            }
                                        }
                                    ]
                                },
                                ""
                            ]
                        }
                    }
                ]
            }
        },
